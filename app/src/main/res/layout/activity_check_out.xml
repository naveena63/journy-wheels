<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckOutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15sp"
        android:layout_marginBottom="150sp"
        android:orientation="vertical"
        android:padding="5sp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15sp"
           >

            <TextView
                android:id="@+id/text_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checkout_drawable"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:padding="12dp"
                android:text="summary"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:textColor="@color/black"


                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/vechileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:fontFamily="@font/poppins"
android:textColor="@color/black"
            android:gravity="center"
            android:text="bike"
            android:textSize="@dimen/dimen_14sp"
            />

        <TextView
            android:id="@+id/vechilePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/vechieImage"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@drawable/bike1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/check_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="12-12-9019"
                            android:textColor="@color/black"
                            android:textSize="15sp"

                            />

                        <TextView
                            android:id="@+id/check_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="05:00"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                          />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/toText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@color/black"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="TO"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/check_date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="12-12-9019 "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/check_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:text="05:00"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                             />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="pick up address"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/check_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="pick up address"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/check_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="drop up address"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal"
            android:padding="5sp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/total_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Total price"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numberOfHelmet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:padding="3dp"
                    android:text="Number of helmets"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Km limit"
                     android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/excessKM"
                     android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Excess Km charges"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/symbolText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:text="₹"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_15sp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/check_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="500"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/check_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Spinner>

                    <TextView
                        android:id="@+id/check_helmet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/check_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="150"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_excess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="2/km"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp">

            <TextView
                android:id="@+id/textCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Have Coupon Code"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/checkout_drawable"
                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/check_couponcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Enter Coupon code" />

            <Button
                android:id="@+id/check_couponbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0bae44"
                android:text="Apply"
                android:visibility="visible"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15sp"
            app:cardBackgroundColor="@color/second">

            <TextView
                android:id="@+id/checkOutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="start"
                android:text="Check out"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="12dp"
                android:background="@drawable/checkout_drawable"
                />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/bokkingFeeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Booking fee"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                 android:id="@+id/cgstText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGST"
                    android:padding="3dp"

                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SgstText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SGST"
                    android:padding="3dp"

                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalPyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payment"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/check_bookingfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/check_cgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 62.1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_sgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 62.1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/check_totalpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2483"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree with the terms and conditions"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="45sp"
            android:background="#0bae44"
            android:padding="5sp"
            android:text="pay now"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>