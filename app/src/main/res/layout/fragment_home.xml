<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/white"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55sp"
        android:layout_marginLeft="52sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/homename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guys"
            android:textSize="23sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's take a ride !"
            android:textSize="23sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp">

        <TextView
            android:id="@+id/bike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="52sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/text_bg"
            android:drawableStart="@drawable/drawable_bike"
            android:drawableLeft="@drawable/drawable_bike"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="8sp"
            android:text="Book Your Bike"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Your Car"
            android:textStyle="normal"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:drawableStart="@drawable/draweble_car"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/text_bg"
            android:layout_gravity="right"
            android:padding="8sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="52sp"
            android:layout_marginBottom="10sp"
            android:drawableLeft="@drawable/draweble_car" />
        <TextView
            android:id="@+id/cycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Your Cycle"
            android:textStyle="normal"
            android:gravity="center"
            android:drawableStart="@drawable/drawable_cycle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/text_bg"
            android:layout_gravity="right"
            android:padding="8sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="52sp"
            android:layout_marginBottom="10sp"
            android:drawableLeft="@drawable/drawable_cycle" />




    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10sp"
        android:id="@+id/viewPager"
        />






</FrameLayout>